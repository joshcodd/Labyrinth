        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <BorderPane styleClass="background-image" prefHeight="650.0" prefWidth="850.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <center>
                        <HBox fx:id="boardArea"  BorderPane.alignment="CENTER">
                            <children>
                                <VBox alignment="CENTER">
                                    <children>
                                        <HBox>
                                 <children>
                                    <GridPane fx:id="topButtons">
                                    </GridPane>
                                 </children></HBox>
                                        <HBox>
                                 <children>
                                    <GridPane fx:id="leftButtons">
                                    </GridPane>
                                    <GridPane fx:id="gameBoardPane">
                                    </GridPane>
                                    <GridPane fx:id="rightButtons">
                                    </GridPane>
                                 </children></HBox>
                                        <HBox>
                                 <children>
                                    <GridPane fx:id="bottomButtons">
                                    </GridPane>
                                 </children></HBox>
                                    </children>
                                </VBox>
                        <StackPane prefHeight="150.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
