                                      <VBox fx:id="playerConsole" styleClass="player-console" alignment="TOP_CENTER" >
                                          <children>
                                              <Label fx:id="playerLabel" styleClass="player-label" text="Player">
                                              </Label>
                                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <HBox alignment="CENTER">
                                             <ImageView fx:id="decrementOrientation" styleClass="rotate-arrow" fitHeight="69.0" fitWidth="69.0" rotate="-112.6">
                                             </ImageView>
                                              <ImageView fx:id="selectedTile" fitHeight="80" fitWidth="80">
                                </ImageView>
                                             <ImageView fx:id="incrementOrientation" styleClass="rotate-arrow" fitHeight="69.0" fitWidth="69.0" rotate="62.4">
                                             </ImageView>
                                          </HBox>
                                       </children>
                                    </VBox>
                                    <VBox alignment="BOTTOM_LEFT" prefHeight="217.0" prefWidth="800.0" style="-fx-padding: 0 0 80 0;" VBox.vgrow="ALWAYS">
                                       <children>
            
            
                                          <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-padding: 10 0 30 20;">
                                             <children>
                                                <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="150.0" style="-fx-padding: 10;">
                                                   <children>
                        
                                                                   <Button fx:id="drawTile" styleClass="game-button" text="Draw a tile!">
                                     </Button>
                                                   </children>
                                                </VBox>
                                                <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="150.0" style="-fx-padding: 10;">
                                                   <children>
                                                                <Button fx:id="actionButton" styleClass="game-button" text="Play action!">
                                        </Button>
                                                   </children>
                                                </VBox>
                                                <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="150.0" style="-fx-padding: 10;">
                                                   <children>
                                                      <Button fx:id="continueButton" styleClass="game-button" text="Continue" />
                                                   </children>
                                                </VBox>
                                             </children>
                                             <opaqueInsets>
                                                <Insets />
                                             </opaqueInsets>
                                          </HBox>
                                                    <Label style="-fx-padding: 0 0 0 0 0;" text="Action tiles: ">
                                                        <font>
